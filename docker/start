#!/usr/bin/env bash
set -e
if [ -f tmp/pids/server.pid ];then
  sudo rm -f tmp/pids/server.pid
fi
if [ "$1" = "rm" ];then
  shift
  docker-compose rm -f
fi
docker-compose stop
if [ "$1" = "debug" ]; then
  docker-compose up $@
elif [ "$1" -ne "" ]; then
  docker-compose up -d
  docker attach newsdict-$1
else
  docker-compose up -d
  docker attach newsdict-web
fi