<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<section class="hero is-success is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-grey"><%= t('Sign up Form') %></h3>
        <p class="subtitle has-text-grey"><%= t('Please sign to proceed.') %></p>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="box">
            <div class="field">
              <%= f.label :username, class: 'label' %>
              <div class="control">
                <%= f.text_field :username, autofocus: false, class: "input is-large" %>
              </div>
            </div>
            <div class="field">
              <%= f.label :email, class: 'label' %>
              <div class="control">
                <%= f.email_field :email, autofocus: false, autocomplete: "email", class: "input is-large" %>
              </div>
            </div>
            <div class="field">
              <%= f.label :password, class: 'label' %>
              <div class="control">
                <%= f.password_field :password, autocomplete: "new-password", class: "input is-large" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
              </div>
            </div>
            <div class="field">
              <%= f.label :password_confirmation, class: 'label' %>
              <div class="control">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-large" %>
              </div>
            </div>
          <%= f.submit "Sign up" %>
          <hr/>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>