<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <section class="hero is-success is-fullheight">
    <div class="hero-body">
      <div class="container has-text-centered">
        <div class="column is-4 is-offset-4">
          <h3 class="title has-text-grey"><%= t('.resend_confirmation_instructions') %></h3>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="box">
            <div class="field">
              <%= f.label :email, class: 'label' %>
              <div class="control">
                <%= f.email_field :email, autofocus: false, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "input is-large" %>
              </div>
            </div>
            <%= f.submit t('.resend_confirmation_instructions') %>
            <hr/>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>