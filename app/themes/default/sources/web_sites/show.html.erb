<header id="web-site-header">
    <%= form_for(@web_site, url: edit_web_site_path(@id), method: :post) do |f| %>
        <div class="buttons">
            <div class="field is-horizontal">
                <div class="field-body">
                    <div class="field-label is-normal">
                        <label class="label">Url</label>
                    </div>
                    <input type="hidden" id="id" name="id">
                    <div class="field">
                        <p class="control is-expanded has-icons-left">
                            <input class="input" type="text" id="source-url" name="source-url" placeholder="URL" disabled>
                            <span class="icon is-small is-left">
                                <i class="fas fa-link"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field-label is-normal">
                        <label class="label">Xpath</label>
                    </div>
                    <div class="field">
                        <p class="control is-expanded has-icons-left has-icons-right">
                            <input class="input" type="text" id="xpath" name="xpath" placeholder="xpath" readonly>
                            <span class="icon is-small is-left">
                                <i class="fas fa-file-code"></i>
                            </span>
                        </p>
                    </div>
                </div>
            </div>
            <button class="button is-link is-large" type="submit"><%= t(:save) %></button>
            <button id="web-site-reset" type="reset" class="button is-medium"><%= t(:reset) %></button>
        </div>
    <% end %>
</header>
<main id="web-site-main">
    <iframe id="web-site-iframe" src="<%= html_web_site_path(@id) %>"></iframe>
    <div>
        <%= t('.description') %>
        <hr/>
        <caption><%= t('.links') %></caption>
        <ul id="show_links">
        </ul>
    </div>
</main>